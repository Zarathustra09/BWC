@model BWC.Models.AppointmentStatisticsViewModel

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        background-color: #f8f9fa;
        z-index: 1000; /* Ensure it is above other content */
    }

    /* Main Content Styling */
    .main-content {
        padding: 20px;
    }

    /* DataTable Adjustment */
    .dataTables_wrapper {
        margin-top: 20px; /* Provide some spacing from other content */
    }
</style>
<body>
    <nav class="sidebar">
        <div class="logo-name">
            <div class="logo-image">
                <img src="logo.jpg" alt="">
            </div>
            <span class="logo_name">Benilde Well Being Center</span>
        </div>
        <div class="menu-items">
            <ul class="nav-links">
                <li>
                    <a asp-action="Index" asp-controller="Home">
                        <i class="uil uil-estate"></i>
                        <span class="link-name">Dashboard</span>
                    </a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="AdminAppointment">
                        <i class="uil uil-calendar-alt"></i>
                        <span class="link-name">Appointments</span>
                    </a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="CounselorAdmin">
                        <i class="uil uil-users-alt"></i>
                        <span class="link-name">Counselors</span>
                    </a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="StudentAdmin">
                        <i class="uil uil-graduation-cap"></i>
                        <span class="link-name">Students</span>
                    </a>
                </li>
            </ul>

            <ul class="logout-mode">
                <li>
                    <a asp-action="Index" asp-controller="Login">
                        <i class="uil uil-signout"></i>
                        <span class="link-name">Logout</span>
                    </a>
                </li>
               
            </ul>
        </div>
    </nav>
    <section class="dashboard">
        <div class="top">
            <i class="uil uil-bars sidebar-toggle"></i>
            <div class="search-box">
                <i class="uil uil-search"></i>
                <input type="text" placeholder="Search here...">
            </div>
        </div>
        <div class="main-content">
            <div class="dash-content">
                <div class="overview">
                    <div class="title">
                        <i class="uil uil-tachometer-fast-alt"></i>
                        <span class="text">Dashboard</span>
                    </div>
                    <div class="boxes">
                        <div class="box box1">
                            <i class="uil uil-calendar-alt"></i>
                            <span class="text">Total Appointments</span>
                            <span class="number">@Model.TotalAppointments</span>
                        </div>
                        <div class="box box2">
                            <i class="uil uil-repeat"></i>
                            <span class="text">Follow Ups</span>
                            <span class="number">@Model.FollowUps</span>
                        </div>
                        <div class="box box3">
                            <i class="uil uil-check-circle"></i>
                            <span class="text">Completed Counseling</span>
                            <span class="number">@Model.Completed</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
