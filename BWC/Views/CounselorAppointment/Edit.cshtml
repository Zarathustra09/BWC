@model BWC.Models.AppointmentDto

@{
    ViewData["Title"] = "Edit Appointment";
}

<style>
    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 4px;
        background-color: #f9f9f9;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-group button {
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            color: white;
            background-color: #007bff;
        }
</style>

<body>
    <section class="dashboard">
        <div class="main-content">
            <div class="form-container">
                <h2>Edit Appointment</h2>
                <form asp-action="Edit" asp-controller="CounselorAppointment" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="CounselorName">Counselor</label>
                        <input type="text" id="CounselorName" name="CounselorName" value="@ViewBag.CounselorName" readonly class="form-control" />
                        <input type="hidden" id="CounselorId" name="CounselorId" value="@Model.CounselorId" />
                    </div>

                    <div class="form-group">
                        <label for="StudentId">Student</label>
                        @Html.DropDownListFor(model => model.StudentId, (IEnumerable<SelectListItem>)ViewBag.Students, "Select Student", new { @class = "form-control", @id = "StudentId" })
                    </div>

                    <div class="form-group">
                        <label for="AppointmentDate">Appointment Date</label>
                        <input type="datetime-local" id="AppointmentDate" name="AppointmentDate" value="@Model.AppointmentDate.ToString("yyyy-MM-ddTHH:mm")" required />
                    </div>

                    <div class="form-group">
                        <label for="Reason">Reason</label>
                        <input type="text" id="Reason" name="Reason" value="@Model.Reason" required />
                    </div>

                    <div class="form-group">
                        <label for="Status">Status</label>
                        @Html.DropDownListFor(model => model.Status, new List<SelectListItem>
                        {
                        new SelectListItem { Text = "Pending", Value = "0" },
                        new SelectListItem { Text = "Approved", Value = "1" },
                        new SelectListItem { Text = "No Show", Value = "2" },
                        new SelectListItem { Text = "Cancelled", Value = "3" },
                        new SelectListItem { Text = "Complete", Value = "4" }
                        }, new { @class = "form-control", @id = "Status" })
                    </div>

                    <div class="form-group">
                        <label for="AppointmentType">Appointment Type</label>
                        @Html.DropDownListFor(model => model.AppointmentType, new List<SelectListItem>
                        {
                        new SelectListItem { Text = "Initial", Value = "0" },
                        new SelectListItem { Text = "Follow-Up", Value = "1" }
                        }, new { @class = "form-control", @id = "AppointmentType" })
                    </div>

                    <div class="form-group">
                        <button type="submit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</body>
